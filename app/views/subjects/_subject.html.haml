%tr
  %td= subject.name
  %td= subject.description
  %td
    = link_to t('.edit'), edit_subject_path(subject), class: 'btn btn-sm btn-warning'
    = link_to t('.delete'), subject_path(subject), data: { confirm: t('messages.delete_question') },
                method: :delete, class: 'btn btn-sm btn-danger'